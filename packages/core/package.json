{
  "name": "@eleven-am/pondsocket",
  "version": "0.1.188",
  "description": "PondSocket is a fast simple socket server",
  "keywords": [
    "socket",
    "server",
    "ws",
    "websocket",
    "pubsub",
    "presence",
    "realtime",
    "realtime server"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest --coverage --verbose --forceExit --detectOpenHandles --runInBand --bail",
    "build": "rimraf dist && tsc && npm run remove",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --fix --ext .ts src",
    "remove": "rm -r dist/tests && rm dist/distIndex.js",
    "copy": "cp src/types.d.ts dist/types.d.ts && cp src/distIndex.ts dist/index.d.ts && cp package.json dist && cp README.md dist && cp LICENSE dist",
    "push": "npm version patch && npm run copy && cd dist && npm publish && cd ..",
    "pipeline": "npm run lint && npm run test && npm run build && npm run push"
  },
  "author": "Roy OSSAI",
  "license": "GPL-3.0",
  "main": "./index.js",
  "types": "./index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Eleven-am/pondSocket.git"
  },
  "dependencies": {
    "@eleven-am/pondsocket-common": "^0.0.25",
    "ioredis": "^5.4.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin-ts": "^2.9.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.1",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-file-progress": "^1.5.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
